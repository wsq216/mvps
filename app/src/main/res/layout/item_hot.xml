<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/txt_name"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1分钟"
        android:id="@+id/txt_time"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="70dp"
        android:textColor="#DD175F"
        android:gravity="center"
        android:background="@drawable/shape_hots"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:text="+关注"/>

    <com.example.mvps.expandableTextView.ExpandableTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_icon"
        android:id="@+id/txt_text"/>

    <com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/nineGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showStyle="fill"
        app:imgGap="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_text"></com.jaeger.ninegridimageview.NineGridImageView>



</androidx.constraintlayout.widget.ConstraintLayout>