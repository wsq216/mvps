<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/void_frame"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <TextView
                android:id="@+id/void_title"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/video_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/video_name"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:layout_toRightOf="@id/video_head"
                    android:paddingHorizontal="5dp"
                    android:textStyle="bold"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/love_select"
                    android:layout_toLeftOf="@id/video_count"
                    android:id="@+id/video_love"
                    android:button="@null"
                    android:layout_gravity="right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/video_count"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:paddingHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>